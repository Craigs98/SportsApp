<div class='col-sm-6 col-lg-4'>
  <div class="card">
  <div class="card-block">
    <h4 class="card-title"><%= link_to post.title, post %></h4>
    <p class="published-date"><%= post.display_day_published %></p>
    <p class="published-user"><%= post.user_name_published %></p>
    <p class-"card-text"><%= truncate(post.body, length: 130) %></p>
    <%= link_to 'Read', post, class: 'btn btn-read' %>
    <% if current_user && current_user.admin %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>

    <% if current_user && current_user.admin %>
    <%= link_to 'Publish', edit_post_path(post) %>
    <% end %>
    </div>
  </div>
</div>
