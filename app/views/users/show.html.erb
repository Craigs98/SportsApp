<div class="container col-md-10 offset-md-1 col-lg-8 offset-lg-2 text-xs-left">
  <aside class="col-md-4">
    <div>
      <h1>My Profile</h1>
    </div>
    <div class="hero-unit user_info">
      <h1><%= @user.email %></h1> <!-- displays user email on profile page  -->
    </div>
  </aside>
</div>

<% @user_posts.each do |post| %>
    <div class="container ">
      <div class="card mb-2">
        <div class="card-block p-3 bg-light text-muted">
          <table class="table">
             <thead>
              <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-lg">Title</label>
            </thead>
            <tbody>

                <th scope="row">
                  <%= link_to post.title, post %> <!--clickable link added to post title -->
                </th>
            </tbody>
              </table>
          </div>
      </div>
  </div>
<% end %>
